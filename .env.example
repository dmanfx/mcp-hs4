# HS4 connectivity
HS4_BASE_URL=http://127.0.0.1
HS4_USER=
HS4_PASS=
HS4_TIMEOUT_MS=10000
HS4_READ_RETRIES=2
HS4_READ_RETRY_BACKOFF_MS=200
HS4_STATUS_INCLUDE_EVERYTHING=false
HS4_MAX_DEVICES_DEFAULT_CAP=250
HS4_STATUS_CACHE_TTL_MS=1500
HS4_SCRIPT_PAGE_PATH=/runscript.html
HS4_EVENTS_DATA_PATH=/usr/local/HomeSeer/Data/HomeSeerData_2.json/events.json
HS4_EVENT_GROUPS_DATA_PATH=/usr/local/HomeSeer/Data/HomeSeerData_2.json/eventgroups.json
HS4_ALIAS_LEARNED_ENABLED=true
HS4_ALIAS_CONFIG_PATH=
HS4_CHANGE_TOKEN_TTL_SEC=900
HS4_CHANGE_TOKEN_MAX_ENTRIES=2000
HS4_CHANGE_TOKEN_PERSIST_PATH=

# Mutation safety
HS4_SAFE_MODE=read_write
HS4_REQUIRE_CONFIRM=true
HS4_DEFAULT_DRY_RUN=false

# Admin policy and guardrails
HS4_ADMIN_ENABLED=false
HS4_ADMIN_USERS_ENABLED=false
HS4_ADMIN_PLUGINS_ENABLED=false
HS4_ADMIN_INTERFACES_ENABLED=false
HS4_ADMIN_SYSTEM_ENABLED=false
HS4_ADMIN_CAMERAS_ENABLED=false
HS4_ADMIN_EVENTS_ENABLED=false
HS4_ADMIN_CONFIG_ENABLED=false
HS4_ADMIN_MAINTENANCE_WINDOW_ID=
HS4_ADMIN_ALLOWED_MAINTENANCE_WINDOW_IDS=
HS4_ADMIN_REQUIRE_CHANGE_TICKET=true
HS4_ADMIN_ROLLBACK_ENABLED=true
HS4_ADMIN_EXECUTION_MODE=adapter
HS4_ADMIN_DIRECT_FALLBACK=true
HS4_ADMIN_CAPABILITY_CACHE_TTL_SEC=300
HS4_ADMIN_ALLOWED_USER_IDS=
HS4_ADMIN_ALLOWED_PLUGIN_IDS=
HS4_ADMIN_ALLOWED_INTERFACE_IDS=
HS4_ADMIN_ALLOWED_CATEGORY_IDS=

# Optional allowlists (comma separated; numeric values can include ranges like 100-110)
HS4_ALLOWED_DEVICE_REFS=
HS4_ALLOWED_EVENT_IDS=
HS4_ALLOWED_CAMERA_IDS=
HS4_ALLOWED_SCRIPTS=
HS4_ALLOWED_PLUGIN_FUNCTIONS=

# MCP transport
MCP_TRANSPORT=stdio
MCP_HTTP_HOST=127.0.0.1
MCP_HTTP_PORT=7422
MCP_HTTP_ALLOW_NON_LOOPBACK=false
MCP_HTTP_ACCEPT_MODE=compat
MCP_HTTP_ALLOW_JSON_ONLY=true
MCP_HTTP_AUTH_TOKEN=
MCP_HTTP_AUTH_REQUIRED_NON_LOOPBACK=true
MCP_HTTP_AUTH_PROTECT_HEALTHZ=true

# Logging and audit
MCP_LOG_LEVEL=info
MCP_LOG_PRETTY=true
MCP_AUDIT_MAX_ENTRIES=5000
MCP_AUDIT_PERSIST_PATH=
